mixin card(image, title, description, version, techonologies)
    section.card
        section.card-image
            img(src=require("../images/icons/icon-brave.svg").default, alt="Icon Brave")
        section.card-text
            .card-text-title #{title}
            .card-text-description #{description}
            section.card-text-footer
                section
                    p Techonologies:
                    img(src=require("../images/icons/icon-vuejs.svg").default, alt="Icon Vuejs")
                section.right
                    p Version: #{version}